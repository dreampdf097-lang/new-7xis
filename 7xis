<script>
function openTab(i){
 document.querySelectorAll("section").forEach((s,x)=>s.classList.toggle("active",x===i));
 document.querySelectorAll("nav button").forEach((b,x)=>b.classList.toggle("active",x===i));
}

function rand(a,b){return Math.floor(Math.random()*(b-a+1))+a;}

function gerarFamoso(){
 const f=famoso.value;
 if(!f){resFamoso.innerText="âŒ Famoso nÃ£o identificado";return;}
 let extra=(f==="drey"&&espacoDrey.value)?`\nExtra Drey: ${espacoDrey.value}`:"";
 resFamoso.innerText=
`Famoso: ${f}
Geral: ${rand(150,200)}
Red Dot: ${rand(140,190)}
2x: ${rand(130,180)}
4x: ${rand(120,170)}
AWM: ${rand(110,160)}${extra}`;
}

function gerarDPI(){
 if(!dpiTipo.value){resDPI.innerText="âŒ Escolha o tipo";return;}
 let r=dpiTipo.value=="leve"?rand(690,1600):dpiTipo.value=="eq"?rand(500,690):rand(300,500);
 resDPI.innerText="DPI ideal: "+r;
}

function gerarCelular(){
 if(!marca.value||!potencia.value||!tipoSensi.value){
 resCel.innerText="âŒ Preencha tudo";return;}
 resCel.innerText=
`Marca: ${marca.value}
PotÃªncia: ${potencia.value}
Geral: ${rand(140,190)}
Red Dot: ${rand(130,180)}
2x: ${rand(120,170)}`;
}

function gerarBotao(){
 if(!btnTipo.value){resBtn.innerText="âŒ Escolha um tipo";return;}
 let r=btnTipo.value=="leve"?rand(10,30):btnTipo.value=="eq"?rand(20,40):rand(50,90);
 resBtn.innerText="BotÃ£o de atirar: "+r;
}

function gerarEstilo(){
 if(!estilo.value){resEstilo.innerText="âŒ Estilo nÃ£o identificado";return;}
 resEstilo.innerText=
`Estilo: ${estilo.value}
Geral: ${rand(150,200)}
Red Dot: ${rand(140,190)}
2x: ${rand(130,180)}
4x: ${rand(120,170)}
DPI: ${rand(500,900)}`;
}

function abrirPainel(){
 if(senha.value==="new7xis"){painel.classList.remove("hidden");}
 else alert("Senha incorreta");
}

function filtrarFamoso(v){
 for(let i=1;i<famoso.options.length;i++){
  famoso.options[i].style.display=
  famoso.options[i].text.toLowerCase().includes(v.toLowerCase())?"":"none";
 }
}
</script>

